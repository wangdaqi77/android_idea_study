<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WYMusicListActivity">

    <com.example.wongki.modularization.view.MyNestedScrollView
        android:id="@+id/nsv_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lv_header_contail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="164px">

                <RelativeLayout
                    android:id="@+id/rv_header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/header_bg"
                        android:layout_width="match_parent"
                        android:layout_height="490px"
                        android:scaleType="fitXY" />

                    <LinearLayout
                        android:id="@+id/lv_header_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/header_image_item"
                                android:layout_width="240px"
                                android:layout_height="240px"
                                android:layout_marginLeft="30px"
                                android:scaleType="center" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="30px"
                                android:layout_marginRight="30px"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="让更多人的人死于心碎"
                                    android:textColor="#d2d2d2"
                                    android:textSize="16sp" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20px"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"

                                    >

                                    <ImageView
                                        android:layout_width="60px"
                                        android:layout_height="60px"
                                        android:src="@drawable/header_autho" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="20px"
                                        android:text="宇宙中的匿名者"
                                        android:textColor="#dddddd"
                                        android:textSize="13sp" />

                                    <ImageView
                                        android:layout_width="30px"
                                        android:layout_height="30px"
                                        android:layout_marginLeft="10px"
                                        android:src="@drawable/arr_right" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="40px"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"

                                    >

                                    <TextView
                                        android:layout_width="300px"
                                        android:layout_height="wrap_content"
                                        android:lines="2"
                                        android:text="我选择了音符间隔比较长的曲子，为了舒缓神经吧，它..."
                                        android:textColor="#b3b3b3"
                                        android:textSize="11sp" />

                                    <ImageView
                                        android:layout_width="30px"
                                        android:layout_height="30px"
                                        android:layout_marginLeft="10px"
                                        android:src="@drawable/arr_right" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lv_header_icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lv_header_detail"
                        android:layout_marginLeft="24px"
                        android:layout_marginTop="30px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50px"
                                android:layout_height="50px"
                                android:src="@drawable/message" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6px"
                                android:text="28"
                                android:textColor="#cbcbcb"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50px"
                                android:layout_height="50px"
                                android:src="@drawable/share" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6px"
                                android:text="53"
                                android:textColor="#cbcbcb"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50px"
                                android:layout_height="50px"
                                android:src="@drawable/download" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6px"
                                android:text="下载"
                                android:textColor="#cbcbcb"
                                android:textSize="12sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="50px"
                                android:layout_height="50px"
                                android:src="@drawable/checkbox" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6px"
                                android:text="多选"
                                android:textColor="#cbcbcb"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="120px"
                        android:layout_below="@+id/lv_header_icon"
                        android:layout_marginTop="20px"
                        android:background="@drawable/shape_circle"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/header_music_log"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/wangyi" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/header_music_log"
                            android:layout_marginLeft="16px"
                            android:layout_toRightOf="@id/header_music_log"
                            android:text="会员享高平直听觉盛宴"
                            android:textColor="#3c3c3c"
                            android:textSize="16sp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/header_music_log"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10px"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="2"
                                android:text="首开VIP仅9元"
                                android:textColor="#7f7f7f"
                                android:textSize="14sp" />

                            <ImageView
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:layout_marginLeft="10px"
                                android:src="@drawable/arr_right" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/music_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </com.example.wongki.modularization.view.MyNestedScrollView>
    <!--背景图-->
    <!--填充system status bar-->
    <!--toolbar-->
    <!--header-->
    <!--列表-->
    <!---->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent">

        <ImageView
            android:id="@+id/toolBarBg"
            android:layout_width="match_parent"
            android:layout_height="164px"
            android:scaleType="fitXY" />

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:theme="@style/Theme.ToolBar"
            app:navigationIcon="@drawable/icon_back"
            app:popupTheme="@style/Theme.Menu.Pop"
            app:subtitle="music"
            app:subtitleTextAppearance="@style/Theme.ToolBar.Title"
            app:title="歌单"
            app:titleTextAppearance="@style/Theme.ToolBar.Title" />
    </RelativeLayout>

    <com.example.wongki.modularization.view.SmenVIew
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>